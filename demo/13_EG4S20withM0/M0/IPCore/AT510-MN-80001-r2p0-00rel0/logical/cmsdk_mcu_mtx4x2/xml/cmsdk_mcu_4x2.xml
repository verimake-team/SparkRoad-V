<!--  Purpose             : Example XML file, defining an interconnect for  -->
<!--                        4 AHB Masters and 2 AHB Slaves.                 -->
<!--                                                                        -->
<!--  Note                : This information will overwrite parameters      -->
<!--                         specified on the command line                  -->
<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->

<cfgfile>

  <!-- - - - - *** DO NOT MODIFY ABOVE THIS LINE *** - - - - - - - - - - -  -->

  <!-- Global definitions -->

  <architecture_version>ahb2</architecture_version>
  <arbitration_scheme>fixed</arbitration_scheme>
  <routing_data_width>32</routing_data_width>
  <routing_address_width>32</routing_address_width>
  <user_signal_width>3</user_signal_width>
  <bus_matrix_name>cmsdk_mcu_mtx4x2</bus_matrix_name>
  <input_stage_name>cmsdk_mcu_mtx4x2_ip</input_stage_name>
  <matrix_decode_name>cmsdk_mcu_mtx4x2_dec_</matrix_decode_name>
  <output_arbiter_name>cmsdk_mcu_mtx4x2_arb_</output_arbiter_name>
  <output_stage_name>cmsdk_mcu_mtx4x2_op_</output_stage_name>


  <!-- Slave interface definitions -->
  <!--   Slave #0 for DMA controller -->

  <slave_interface name="S0">
    <sparse_connect interface="M0"/>
    <sparse_connect interface="M1"/>
    <address_region interface="M0" mem_lo="00000000" mem_hi='1fffffff' remapping='none'/>
    <address_region interface="M1" mem_lo="20000000" mem_hi="ffffffff" remapping='none'/>
  </slave_interface>


  <!--   Slave #1 for System bus -->
  <slave_interface name="S1">
    <sparse_connect interface="M1"/>
    <address_region interface="M1" mem_lo="20000000" mem_hi="ffffffff" remapping='none'/>
  </slave_interface>

  <!--   Slave #2 for D-Code bus -->
  <slave_interface name="S2">
    <sparse_connect interface="M0"/>
    <address_region interface="M0" mem_lo="00000000" mem_hi='1fffffff' remapping='none'/>
  </slave_interface>

  <!--   Slave #3 for I-Code bus -->
  <slave_interface name="S3">
    <sparse_connect interface="M0"/>
    <address_region interface="M0" mem_lo="00000000" mem_hi='1fffffff' remapping='none'/>
  </slave_interface>

  <!-- Master interface definitions -->

  <master_interface name="M0"/>
  <master_interface name="M1"/>

  <!-- - - - - *** DO NOT MODIFY BELOW THIS LINE *** - - - - - - - - - - - -->

</cfgfile>
